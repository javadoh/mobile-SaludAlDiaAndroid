<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/editTextDefaultBackgroundColor"
    android:minHeight="110dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/labImage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="40"
        android:adjustViewBounds="true"
        android:contentDescription="@string/content_description_pacient_program"
        android:scaleType="fitCenter"
        android:src="@drawable/placeholder_lab" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="60">

        <TextView
            android:id="@+id/pacientProgramName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="Programa Chile Salud"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/pacientProgramDiagnostics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/pacientProgramName"
            android:layout_alignStart="@id/pacientProgramName"
            android:layout_below="@id/pacientProgramName"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:textSize="10sp"
            android:visibility="gone"
            tools:ignore="HardcodedText,SmallSp" />

        <TextView
            android:id="@+id/pacientProgramSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/pacientProgramName"
            android:layout_alignStart="@id/pacientProgramName"
            android:layout_below="@id/pacientProgramDiagnostics"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:ellipsize="end"
            android:lines="4"
            android:maxLines="4"
            android:text="Beneficios economicos en tratamientos de enfermedades cronicas, tales como: Alzheimer, Artrosis, Diabetes, Dislopidemia, Hipertension, Oseteoporosis."
            android:textSize="10sp"
            tools:ignore="HardcodedText,SmallSp" />

        <TextView
            android:id="@+id/lblPrecioConDescuento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/pacientProgramName"
            android:layout_alignStart="@id/pacientProgramName"
            android:layout_below="@id/pacientProgramSummary"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@id/txtPrecioConDescuento"
            android:layout_toStartOf="@id/txtPrecioConDescuento"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:text="@string/pharmacy_list_item_precio_con_descuento"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/txtPrecioConDescuento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lblPrecioConDescuento"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:text="$18.573.-"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:ignore="HardcodedText" />
        <!--
            <ImageView
                android:id="@+id/btnShare"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_floating_share_button"
                android:contentDescription="@string/content_description_share_button"
                android:padding="4dp"
                android:src="@drawable/ic_share_black_36dp"
                android:tint="#a4a4a4" />-->
    </RelativeLayout>
</LinearLayout>