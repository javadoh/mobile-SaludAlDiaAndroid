<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:src="@drawable/placeholder_producto"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txtProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/imgProduct"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/imgProduct"
        android:ellipsize="end"
        android:lines="2"
        android:maxLines="2"
        android:text="Diclofenaco SÃ³dico 50mg"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtActivePrinciple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtProductName"
        android:layout_toEndOf="@+id/imgProduct"
        android:layout_toRightOf="@+id/imgProduct"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:text="Ibupirac"
        android:textSize="13sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtProductLab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txtProductName"
        android:layout_below="@id/txtActivePrinciple"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:text="LABORATORIO CHILE"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/btnDelete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:layout_alignBottom="@id/txtProductLab"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_eliminar"
        tools:ignore="ContentDescription" />

</RelativeLayout>