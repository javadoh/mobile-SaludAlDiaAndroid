<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:gravity="center_vertical"
    tools:context="com.orugga.yapp.fragments.login.RestorePasswordFragment"
    tools:ignore="KeyboardInaccessibleWidget">

    <TextView
        android:id="@+id/txtTeEnviaremosLaContraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/editTxtEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/txt_te_enviaremos_la_contraseña"
        android:textColor="@color/defaultTextColor"
        android:textSize="19sp" />

    <EditText
        android:id="@+id/editTxtEmail"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/bg_edit_text_login"
        android:gravity="center_vertical"
        android:hint="@string/txt_hint_email"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:textColorHint="@color/defaultTextColor" />


    <TextView
        android:id="@+id/btnSendPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/editTxtEmail"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_btn_blue_rounded"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:text="@string/btn_send_password"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />


</RelativeLayout>
