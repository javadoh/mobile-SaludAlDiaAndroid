                </shape>
            </item>

        </selector>
    </item>
    <item>
        <bitmap android:tint="#b0b0b0" android:gravity="right|center" android:src="@drawable/ic_keyboard_arrow_down_black_36dp"/>
    </item>
</layer-list>
