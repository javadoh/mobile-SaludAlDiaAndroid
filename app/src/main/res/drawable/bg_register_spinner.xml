<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <solid android:color="#f2f2f2" />
                    <stroke
                        android:width="1dp"
                        android:color="#e7e7e8" />
                    <corners android:radius="6dp" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="#f2f2f2" />
                    <stroke
                        android:width="1dp"
                        android:color="#e7e7e8" />
